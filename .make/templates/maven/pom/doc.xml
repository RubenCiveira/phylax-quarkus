<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.ejemplo</groupId>
	<artifactId>doc</artifactId>
	<version>1.0.0</version>
	<properties>
		<asciidoctor.maven.plugin.version>2.2.1</asciidoctor.maven.plugin.version>
		<input.book>index</input.book>
		<gem.home>${user.home}/.gem</gem.home>
		<gem.path>${gem.home}/.gem</gem.path>
		<kroki.server>https://kroki.io</kroki.server>
		<documentLang>en</documentLang>
		<documentFolder>site</documentFolder>
		<projectRoot>${basedir}/../../../../</projectRoot> <!-- fallback si no se pasa -->
		<documentsRoot>${projectRoot}/src/main/docs</documentsRoot>
		<outputDir>${projectRoot}/target/docs</outputDir>
	</properties>
	<repositories>
		<repository>
			<id>mavengems</id>
			<name>Paquetes binarios de ruby para maven</name>
			<url>mavengem:https://rubygems.org</url>
		</repository>
	</repositories>
	<build>
		<extensions>
			<extension>
				<!-- this allows us to download gems -->
				<groupId>org.jruby.maven</groupId>
				<artifactId>mavengem-wagon</artifactId>
				<version>2.0.2</version>
			</extension>
		</extensions>
		<plugins>
			<plugin>
				<groupId>de.saumya.mojo</groupId>
				<artifactId>gem-maven-plugin</artifactId>
				<version>2.0.1</version>
				<executions>
					<execution>
						<id>install-gems-for-asciidoctor</id>
						<phase>validate</phase>
						<goals>
							<goal>sets</goal>
						</goals>
						<configuration>
							<gems>
								<asciidoctor-pdf>2.1.2</asciidoctor-pdf>
								<asciidoctor-kroki>0.6.0</asciidoctor-kroki>
							</gems>
							<jrubyVersion>9.2.5.0</jrubyVersion>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- Copia los documentos y recursos (solo lo necesario) -->
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-doc-and-assets</id>
						<phase>initialize</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${projectRoot}/target/tmp</outputDirectory>
							<resources>
								<resource>
									<directory>${documentsRoot}/${documentLang}/images</directory>
									<includes>
										<include>images/**</include>
									</includes>
									<filtering>false</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<!-- HTML -->
		<profile>
			<id>html</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.asciidoctor</groupId>
						<artifactId>asciidoctor-maven-plugin</artifactId>
						<version>${asciidoctor.maven.plugin.version}</version>
						<executions>
							<execution>
								<id>html</id>
								<phase>compile</phase>
								<goals>
									<goal>process-asciidoc</goal>
								</goals>
								<configuration>
									<backend>html5</backend>
									<sourceDirectory>${documentsRoot}/${documentLang}/${documentFolder}</sourceDirectory>
									<outputDirectory>${outputDir}</outputDirectory>
									<baseDir>${outputDir}</baseDir>
									<relativeBaseDir>true</relativeBaseDir>
									<preserveDirectories>true</preserveDirectories>
									<attributes>
										<imagesdir>images</imagesdir>
										<kroki-server-url>${kroki.server}</kroki-server-url>
										<kroki-fetch-diagram>true</kroki-fetch-diagram>
										<kroki-default-format>png</kroki-default-format>
										<kroki-http-method>post</kroki-http-method>
										<allow-uri-read>true</allow-uri-read>
										<source-highlighter>coderay</source-highlighter>
										<icons>font</icons>
									</attributes>
									<requires>
										<require>asciidoctor-kroki</require>
									</requires>
									<gemPath>${gem.home}</gemPath>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<!-- PDF -->
		<profile>
			<id>pdf</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.asciidoctor</groupId>
						<artifactId>asciidoctor-maven-plugin</artifactId>
						<version>${asciidoctor.maven.plugin.version}</version>
						<executions>
							<execution>
								<id>pdf</id>
								<phase>compile</phase>
								<goals>
									<goal>process-asciidoc</goal>
								</goals>
								<configuration>
									<backend>pdf</backend>
									<sourceDirectory>${documentsRoot}/${documentLang}/${documentFolder}</sourceDirectory>
									<outputDirectory>${outputDir}</outputDirectory>
									<baseDir>${outputDir}</baseDir>
									<relativeBaseDir>true</relativeBaseDir>
									<preserveDirectories>true</preserveDirectories>
									<attributes>
										<imagesdir>./images</imagesdir>
										<kroki-server-url>${kroki.server}</kroki-server-url>
										<kroki-fetch-diagram>true</kroki-fetch-diagram>
										<kroki-default-format>png</kroki-default-format>
										<kroki-http-method>post</kroki-http-method>
										<allow-uri-read>true</allow-uri-read>
										<source-highlighter>coderay</source-highlighter>
										<icons>font</icons>
									</attributes>
									<requires>
										<require>asciidoctor-kroki</require>
										<require>asciidoctor-pdf</require>
									</requires>
									<gemPath>${gem.home}</gemPath>
								</configuration>
							</execution>
						</executions>
						<dependencies>
							<!--
							<dependency>
								<groupId>org.jruby</groupId>
								<artifactId>jruby</artifactId>
								<version>9.4.12.0</version>
							</dependency>
							<dependency>
								<groupId>org.asciidoctor</groupId>
								<artifactId>asciidoctorj</artifactId>
								<version>3.0.0</version>
							</dependency>
							-->
							<dependency>
								<groupId>org.asciidoctor</groupId>
								<artifactId>asciidoctorj-pdf</artifactId>
								<version>2.3.19</version>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
		<!-- Markdown (experimental) -->
		<profile>
			<id>markdown</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.asciidoctor</groupId>
						<artifactId>asciidoctor-maven-plugin</artifactId>
						<version>${asciidoctor.maven.plugin.version}</version>
						<executions>
							<execution>
								<id>markdown</id>
								<phase>compile</phase>
								<goals>
									<goal>process-asciidoc</goal>
								</goals>
								<configuration>
									<backend>markdown</backend>
									<sourceDirectory>${documentsRoot}/${documentLang}/${documentFolder}</sourceDirectory>
									<outputDirectory>${outputDir}</outputDirectory>
									<baseDir>${outputDir}</baseDir>
									<relativeBaseDir>true</relativeBaseDir>
									<preserveDirectories>true</preserveDirectories>
									<attributes>
										<imagesdir>./images</imagesdir>
										<kroki-server-url>${kroki.server}</kroki-server-url>
										<kroki-fetch-diagram>true</kroki-fetch-diagram>
										<kroki-default-format>png</kroki-default-format>
										<kroki-http-method>post</kroki-http-method>
										<allow-uri-read>true</allow-uri-read>
										<source-highlighter>coderay</source-highlighter>
										<icons>font</icons>
									</attributes>
									<requires>
										<require>asciidoctor-kroki</require>
									</requires>
									<gemPath>${gem.home}</gemPath>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
